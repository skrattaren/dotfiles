"xlock -mode blank"
  Mod4 + s

"dmenu_run"
  Mod4 + d

"mpc toggle"
  XF86AudioPlay

"mpc stop"
  XF86AudioStop

"mpc stop"
  shift + XF86AudioPlay

"mpc prev"
  XF86AudioPrev

"mpc next"
  XF86AudioNext

"mpc single on"
  XF86AudioMute

"mpc single off"
  shift + XF86AudioMute

"amixer set Master 3%+"
  XF86AudioRaiseVolume

"amixer set Master 3%-"
  XF86AudioLowerVolume

